{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Development Environment",
            "type": "shell",
            "command": "make setup-dev",
            "problemMatcher": []
        },
        {
            "label": "Deploy Controller into Kind w/ Helm",
            "type": "shell",
            "detail": "Create a local Kind cluster, pushes CRDs, uploads Controller image into Kind, apply test samples",
            "command": "make deploy apply-samples",
            "problemMatcher": []
        },
        {
            "label": "Prepare Kind for Controller debugging",
            "type": "shell",
            "command": "make deploy-without-image apply-samples",
            "problemMatcher": [],
            "hide": true
        },
        {
            "label": "Run Linter",
            "type": "shell",
            "command": "make lint",
            "problemMatcher": {
                "owner": "go",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
        },
    ]
}
