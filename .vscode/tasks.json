{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Development Environment",
            "type": "shell",
            "command": "make setup-dev",
            "problemMatcher": []
        },
        {
            "label": "Deploy Operator Locally",
            "type": "shell",
            "command": "make deploy",
            "problemMatcher": []
        },
        {
            "label": "Run Linter",
            "type": "shell",
            "command": "make lint",
            "problemMatcher": {
                "owner": "go",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "Apply Sample CRDs",
            "type": "shell",
            "command": "make apply-samples",
            "problemMatcher": []
        }
    ]
}
